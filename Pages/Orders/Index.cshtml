@page "/{id:int?}"
@model Cristutiu_Andreea_Proiect.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Order[0].Customer.CustomerName) </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderProducts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderPrice)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderD.Orders)
        {
            string selectedRow = "";
            if (item.ID == Model.OrderID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>@Html.DisplayFor(modelItem => item.Customer.CustomerName)</td>

            <td>
                @{
                    foreach (var product in item.OrderProducts)
                    {
                        @product.Product.ID @: @product.Product.ProductName  @product.Product.ProductPrice <br />




                    }
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.OrderPrice)</td>


            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
    </table>
